---
import Footer from "@components/base/Footer.astro";
import Head from "@components/base/Head.astro";
import Navbar from "@components/base/Navbar.astro";
import Scripts from "@components/base/Scripts.astro";
import "../styles/global.css";
import Sidebar from "@components/base/Sidebar.astro";
interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <Head title={title} />
  <body class="antialiased">
    <div class="drawer lg:drawer-open">
      <input id="my-drawer-4" type="checkbox" class="drawer-toggle" />
      <div class="drawer-content flex flex-col min-h-dvh">
        <Navbar />
        <main
          class="container mx-auto grow p-2 flex flex-col gap-4"
          data-pagefind-body>
          <slot />
        </main>
        <Footer />
      </div>
      <Sidebar />
      <Scripts />
    </div>
  </body>
</html>
