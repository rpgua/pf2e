---
import { Image } from "astro:assets";
interface Props {
    item: unknown;
    customIcon?: boolean;
}
const { item, customIcon } = Astro.props;
---

<td>
    <div class="flex items-center gap-3">
        <div class="avatar">
            <div class="mask mask-squircle h-12 w-12">
                {
                    customIcon ? (
                        <Image
                            src={
                                "/images/icons/" +
                                item.category +
                                "/" +
                                item.name +
                                ".webp"
                            }
                            alt={item.name}
                            width={48}
                            height={48}
                            onerror="onerror=null;src='/images/icons/default.webp'"
                        />
                    ) : (
                        <Image
                            src={"/images/icons/default.webp"}
                            alt={item.name}
                            width={48}
                            height={48}
                        />
                    )
                }
            </div>
        </div>
        <div>
            <div class="font-bold">
                <a
                    class="link link-hover"
                    href={`/${item.category}/${item.id}`}>
                    {item.name}
                </a>
            </div>
            <div class="text-sm opacity-50">
                {item.original_name}
            </div>
        </div>
    </div>
</td>
