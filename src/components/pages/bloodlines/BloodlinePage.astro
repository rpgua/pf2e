---
import BasePage from "@components/pages/BasePage.astro";
import type { CollectionEntry } from "astro:content";
import type { Bloodline } from "../../../types";
import { useTranslations } from "@i18n/utils";
import DisplayInfoList from "@components/pages/DisplayInfoList.astro";
import type { DisplayInfoProps } from "@components/pages/DisplayInfo.astro";

interface Props {
    item: CollectionEntry<"bloodline">;
}
const t = useTranslations();
const { item } = Astro.props;
const bloodline: Bloodline = item.data;

const { tradition, gifts, spells, magic, skills } = bloodline;

const mechanics: DisplayInfoProps[] = [
    {
        title: t("bloodline.tradition"),
        content: tradition,
    },
    {
        title: t("bloodline.skills"),
        content: skills,
        type: "skillsIds",
    },
    {
        title: t("bloodline.gifts"),
        content: gifts,
        type: "spells",
    },
    {
        title: t("bloodline.spells"),
        content: spells,
        type: "spells",
    },
    {
        title: t("bloodline.magic"),
        content: magic,
    },
];
---

<BasePage item={bloodline}>
    <Fragment slot="before-content">
        <DisplayInfoList items={mechanics} />
    </Fragment>
</BasePage>
