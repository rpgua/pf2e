---
import BasePage from "@components/pages/BasePage.astro";
import type { CollectionEntry } from "astro:content";
import type { Archetype } from "../../../types";
import { useTranslations } from "@i18n/utils";
import DisplayInfoList from "@components/pages/DisplayInfoList.astro";
const t = useTranslations();

interface Props {
    item: CollectionEntry<"archetype">;
}
const { item } = Astro.props;
const archetype: Archetype = item.data;

const { level, prerequisite } = archetype;
const mechanics = [
    { title: t("archetype.level"), content: level },
    { title: t("archetype.prerequisite"), content: prerequisite },
];
---

<BasePage item={archetype}>
    <Fragment slot="before-content">
        <DisplayInfoList items={mechanics} />
    </Fragment>
</BasePage>
