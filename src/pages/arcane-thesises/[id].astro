---
import { getCollection } from "astro:content";
import Layout from "@layouts/Layout.astro";
import ArcaneThesisCard from "@components/cards/ArcaneThesisCard.astro";
export async function getStaticPaths() {
    const thesises = await getCollection("arcaneThesis");
    return thesises.map((item) => ({
        params: { id: item.id },
        props: { item },
    }));
}

const { item } = Astro.props;
---

<Layout>
    <ArcaneThesisCard item={item} />
</Layout>
