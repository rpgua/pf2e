---
import Layout from "@layouts/Layout.astro";
import ArcaneThesisCard from "@components/cards/ArcaneThesisCard.astro";
import collections from "@lib/collections";
export async function getStaticPaths() {
    const thesises = collections.arcaneThesis;
    return thesises.map((item) => ({
        params: { id: item.id },
        props: { item },
    }));
}

const { item } = Astro.props;
---

<Layout>
    <ArcaneThesisCard item={item} />
</Layout>
