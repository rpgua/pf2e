---
import Layout from "@layouts/Layout.astro";
import HeritageCard from "@components/cards/HeritageCard.astro";
import collections from "@lib/collections";
export async function getStaticPaths() {
    const heritages = collections.heritage;
    return heritages.map((item) => ({
        params: { id: item.id },
        props: { item },
    }));
}

const { item } = Astro.props;
---

<Layout>
    <HeritageCard item={item} />
</Layout>
