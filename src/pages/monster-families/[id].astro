---
import Layout from "@layouts/Layout.astro";
import collections from "@lib/collections";
import MonsterFamilyPage from "@components/pages/monster-families/MonsterFamilyPage.astro";

export async function getStaticPaths() {
    const items = collections.creatureFamily;
    return items.map((item) => ({
        params: { id: item.id },
        props: { item },
    }));
}
const { item } = Astro.props;
---

<Layout title={item.data.name}>
    <MonsterFamilyPage item={item} />
</Layout>
