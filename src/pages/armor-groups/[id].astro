---
import Layout from "@layouts/Layout.astro";
import collections from "@lib/collections";
import ArmorGroupPage from "@components/pages/armor-groups/ArmorGroupPage.astro";

export async function getStaticPaths() {
    const armorGroups = collections.armorGroup;
    return armorGroups.map((item) => ({
        params: { id: item.id },
        props: { item },
    }));
}
const { item } = Astro.props;
---

<Layout title={item.data.name}>
    <ArmorGroupPage item={item} />
</Layout>
