---
import Layout from "@layouts/Layout.astro";
import AnimalCompanionCard from "@components/cards/AnimalCompanionCard.astro";
import collections from "@lib/collections";
export async function getStaticPaths() {
    const animalCompanions = collections.animalCompanion;
    return animalCompanions.map((item) => ({
        params: { id: item.id },
        props: { item },
    }));
}

const { item } = Astro.props;
---

<Layout>
    <AnimalCompanionCard item={item} />
</Layout>
