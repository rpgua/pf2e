---
import Layout from "@layouts/Layout.astro";
import collections from "@lib/collections";
import AnimalCompanionPage from "@components/pages/animal-companions/AnimalCompanionPage.astro";
export async function getStaticPaths() {
    const animalCompanions = collections.animalCompanion;
    return animalCompanions.map((item) => ({
        params: { id: item.id },
        props: { item },
    }));
}
const { item } = Astro.props;
---

<Layout title={item.data.name}>
    <AnimalCompanionPage item={item} />
</Layout>
